{
  "root": true,
  "extends": ["eslint:recommended"],
  "rules": {
    "@typescript-eslint/no-undef": "off",
    "no-undef": "off"
  },
  "env": {
    "es2022": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
